@helper PageHeader(string title = "", string panelTitle = "Admin Panel", string faIcon = "home")
{

    <section class="content-header">
        <h1>
            <i class="fa fa-@faIcon"></i> @title
            <small>@panelTitle</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> @panelTitle</a></li>
            <li class="active">@title</li>
        </ol>
    </section>
}

@helper CreatePartialModal(string id, string title, string color = "info", string saveButtonText = "Kaydet", bool useSaveButton = true)
{

    <div class="modal modal-@color fade in" id="@id">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">@title</h4>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Kapat</button>
                    @if (useSaveButton)
                    {
                        <button type="button" class="btn btn-@color" id="@("btn" + id)">@saveButtonText</button>
                    }
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
}