@model TodoAppWithMvcAjaxHelpers.Todo

<div id="modal_details" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Task Details : @Model.Text</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    @Html.Action("Details", new { id = Model.Id })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $("#modal_details").modal("show");

            $('#modal_details').on('hidden.bs.modal', function (e) {
                $("#modal_details").remove();
            });
        });
    </script>
</div>